.side-bar
  .side-bar__user-name
    = current_user.name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
      .side-bar__user-name__top-items__icons
        = link_to new_group_path do
          = icon('far', 'edit',class: "side-bar__user-name__top-items__icons")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "side-bar__user-name__top-items__icons")

  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__group-name
            = group.name
          .group__latest-message
            = "メッセージはまだありません"
    
